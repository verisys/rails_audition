    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :vin %><br>
    <%= f.text_field :vin %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :milage %><br>
    <%= f.number_field :milage %>
  </div>
  <div class="field">
    <%= f.label :ext_color %><br>
    <%= f.text_field :ext_color %>
  </div>
  <div class="field">
