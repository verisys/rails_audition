<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :business_phone %><br>
    <%= f.number_field :business_phone %>
  </div>
  <div class="field">
    <%= f.label :home_phone %><br>
    <%= f.number_field :home_phone %>
  </div>
  <div class="field">
    <%= f.label :extension %><br>
    <%= f.number_field :extension %>
  </div>
  <div class="field">
    <%= f.label "Department" %><br>
    <%= f.select :department_id, options_for_select(Department.all.collect{|a| [a.name,a.id]}, @contact.department_id)%>
  </div>
  <div class="field">
    <%= f.label "Emergency contact name" %><br>
    <%= f.text_field :em_contact_name %>
  </div>
  <div class="field">
    <%= f.label "Emergency contact number" %><br>
    <%= f.number_field :em_contact_num %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
