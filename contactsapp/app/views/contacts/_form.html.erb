<%= form_for(contact) do |f| %>
    <% if contact.errors.any? %>
        <div id="error">
          <h2><%= pluralize(contact.errors.count, "error") %> </h2>

          <ul>
            <% contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :department_id %><br>
      <%= f.collection_select :department_id, Department.all, :id, :name %>
    </p>

    <p>
      <%= f.label :business_phone %><br>
      <%= f.text_field :business_phone %>
    </p>

    <p>
      <%= f.label :extension %><br>
      <%= f.text_field :extension %>
    </p>

    <p>
      <%= f.label :home_phone %><br>
      <%= f.text_field :home_phone %>
    </p>

    <p>
      <%= f.label :emergency_contact_name %><br>
      <%= f.text_field :emergency_contact_name %>
    </p>

    <p>
      <%= f.label :emergency_contact_number %><br>
      <%= f.text_field :emergency_contact_number %>
    </p>

    <p>
      <%= f.label :active %><br>
      <%= f.check_box :active %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

