<div class="container">
  <div class="row justify-content-center title-padding">
    <h1><%= "Employees"%><h1>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Role</th>
          <th>Location</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
        <tr>
          <td><p class="lead"><%= "#{employee.name}" %></p></td>
          <td><p class="lead"><%="#{employee.role}" %></p></td>
          <td><p class="lead"><%="#{employee.location.name}" %></p></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
