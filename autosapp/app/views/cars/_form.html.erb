<%= form_for(car) do |f| %>
    <% if car.errors.any? %>
        <div id="error">
          <h2><%= pluralize(car.errors.count, "error") %> </h2>

          <ul>
            <% car.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :make %><br>
      <%= f.text_field :make %>
    </p>

    <p>
      <%= f.label :model %><br>
      <%= f.text_field :model %>
    </p>

    <p>
      <%= f.label :location_id %><br>
      <%= f.collection_select :location_id, Location.all, :id, :name %>
    </p>

    <p>
      <%= f.label :price %><br>
      <%= f.text_field :price %>
    </p>

    <p>
      <%= f.label :sell_price %><br>
      <%= f.text_field :sell_price   %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
