<div class="content">

  <h1>Locations

    <%= link_to '+', new_location_path, class: "btn btn-sm btn-success", title: "Add New Location" %>
  </h1>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @locations.each do |location| %>
        <tr>
          <td><%= location.name %></td>
          <td><%= location.street %></td>
          <td><%= location.city %></td>
          <td><%= location.state %></td>
          <td><%= location.zip %></td>
          <td><%= location.phone %></td>

          <td><%= link_to '<i class="fa fa-search fa-navy"></i>'.html_safe, location,
                          title: "Show Location Details" %></td>

          <td><%= link_to '<i class="fa fa-wrench fa-orange"></i>'.html_safe, edit_location_path(location),
                          title: "Edit Location Details" %></td>

          <% if location.vehicles.count == 0 %>
              <td><%= link_to '<i class="fa fa-trash fa-red"></i>'.html_safe, location, method: :delete,
                              data: {confirm: 'Are you sure?'}, title: "Delete Location" %></td>
          <% end %>


        </tr>
    <% end %>
    </tbody>
  </table>

</div>


