<%= form_for(vehicle) do |f| %>
    <% if vehicle.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

          <ul>
            <% vehicle.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="col-xs-4">
        <div class="form-group">
          <%= f.label :year %>
          <%= f.text_field :year, class: "form-control", placeholder: "Year", type: "number" %>
        </div>

        <div class="form-group">
          <%= f.label :make %>
          <%= f.text_field :make, class: "form-control", placeholder: "Make" %>
        </div>

        <div class="form-group">
          <%= f.label :model %>
          <%= f.text_field :model, class: "form-control", placeholder: "Model" %>
        </div>

        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_field :price, class: "form-control", placeholder: "Price", type: "number" %>
        </div>

      </div>

      <div class="col-xs-1"></div>

      <div class="col-xs-4">
        <div class="form-group">
          <%= f.label :location_id %><br/>
          <%= f.select "location", options_from_collection_for_select(Location.all, "id", "name"), {}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :mpg %>
          <%= f.text_field :mpg, class: "form-control", placeholder: "MPG" %>
        </div>

        <div class="form-group">
          <%= f.label :speed %>
          <%= f.text_field :speed, class: "form-control", placeholder: "Speed", type: "number" %>
        </div>

        <div class="form-group">
          <%= f.label :color %>
          <%= f.text_field :color, class: "form-control", placeholder: "Color" %>
        </div>
      </div>
    </div>

    <%= f.submit %>
<% end %>
