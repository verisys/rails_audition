<p id="notice"><%= notice %></p>

<div class='jumbotron text-center'>
<h1>Inventory</h1>
<%= image_tag("dealer.jpg", class: "center-block img-responsive") %>
</div>
</div>

<table class='table table-bordered table-striped'>
  <thead>
    <tr>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Price</th>
      <th>Location</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.year %></td>
        <td><%= inventory.make %></td>
        <td><%= inventory.model %></td>
        <td><%= inventory.price %></td>
        <td><%= inventory.location %></td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inventory', new_inventory_path %>
