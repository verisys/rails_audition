<div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
	<%= form_for [@location, @car] do |f| %>
		<div class="form-group">
			<%= f.label :make %>
			<%= f.text_field :make, required: true, class: "form-control", autofocus: true %>
		</div>
		<div class="form-group">
			<%= f.label :model %>
			<%= f.text_field :model, required: true, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :price %>
			<%= f.number_field :price, required: true, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :year %>
			<%= f.number_field :year, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :mileage %>
			<%= f.number_field :mileage, class: "form-control" %>
		</div>
		<%= f.submit class: "btn btn-primary" %>
	<% end %>
</div>