<div class="col-md-6 col-md-offset-3">
	<%= form_for @location do |f| %>
		<div class="form-group">
			<%= f.label :address_line_1 %>
			<%= f.text_field :address_line_1, required: true, class: "form-control", autofocus: true %>
		</div>
		<div class="form-group">
			<%= f.label :address_line_2 %>
			<%= f.text_field :address_line_2, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :city %>
			<%= f.text_field :city, required: true, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :state %>
			<%= f.text_field :state, required: true, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :zip_code %>
			<%= f.text_field :zip_code, required: true, class: "form-control" %>
		</div>
		<%= f.submit class: "btn btn-primary" %>
	<% end %>
</div>