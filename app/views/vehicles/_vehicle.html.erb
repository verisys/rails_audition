<div class="col-sm-6 col-md-4">
  <div class="thumbnail" id="vehicle-<%= vehicle.id %>">
    <%= link_to image_tag(vehicle.image_url, alt: "Vehicle Image", height: 120, width: 200), vehicle_url(vehicle) %>
    <div class="caption">
      <h3><%= number_to_currency(vehicle.price) %></h3>
      <% if vehicle.sold %>
        <div>Sold!</div>
      <% end %>
      <div><%= link_to "#{vehicle.year} #{vehicle.make} #{vehicle.model}", vehicle_url(vehicle) %></div>
      <div><%= vehicle.location.name %></div>
      <p>
        <% if logged_in? %>
          <% if sales? %>
            <% if vehicle.sold %>
              <%= link_to "Sell", "", class: "btn btn-primary", disabled: vehicle.sold %>
            <% else %>
              <%= link_to "Sell", sell_vehicle_url(vehicle), class: "btn btn-primary", disabled: vehicle.sold %>
            <% end %>
          <% end %>
          <% if manager? %>
            <%= link_to "Edit", edit_vehicle_url(vehicle), class: "btn btn-default" %>
            <%= link_to "Delete", vehicle, class: "btn btn-danger", method: :delete,
                                            data: { confirm: "You sure?" } %>
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
</div>
