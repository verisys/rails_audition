<%= form_for @vehicle do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @vehicle.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :make %> <br>
    <%= f.text_field :make %>
  </p>
  <p>
    <%= f.label :model %> <br>
    <%= f.text_area :model %>
  </p>
  <p>
    <%= f.label :price %> <br>
    <%= f.text_area :price %>
  </p>
  <p>
    <%= f.label :location %> <br>
    <%= f.collection_select(:location_id, @locations, :id, :name) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>